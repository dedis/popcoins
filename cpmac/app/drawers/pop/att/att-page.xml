<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Attendee"/>
    </ActionBar>

    <GridLayout class="page-content" rows="*,*,*,*" columns="*,auto,auto,*">
        <Label class="label-title" text="Key Pair" row="0" colSpan="4"/>

        <Button text="Generate" row="1" col="0" colSpan="2" tap="generateKeyPair"/>
        <Button text="Display" tap="displayQrOfPublicKey" row="1" col="2" colSpan="2"/>

        <Label class="label-title" text="PoP Token" row="2" colSpan="4"/>

        <Button text="Generate" row="3" colSpan="4" tap="generatePopToken"/>
    </GridLayout>

</Page>
