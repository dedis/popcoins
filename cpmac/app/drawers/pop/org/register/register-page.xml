<Page
        class="page">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Register"/>
    </ActionBar>

    <GridLayout class="page-content" rows="auto,*,auto" columns="*,*">
        <Label class="label-title" text="Registered Public Keys" row="0" colSpan="2"/>

        <ListView items="{{ ??? }}" row="1" colSpan="2">
            <ListView.itemTemplate>
                <GridLayout rows="*" columns="*">
                    <Label text="{{ ??? }}" textAlignment="center" textWrap="true"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>

        <Button text="Manual" row="2" col="0"/>
        <Button text="Scan" row="2" col="1"/>
    </GridLayout>

</Page>
