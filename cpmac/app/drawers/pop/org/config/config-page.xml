<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Configuration"/>
    </ActionBar>

    <GridLayout class="page-content" rows="auto,*,auto" columns="*">
        <Label class="label-title" text="Description" row="0"/>

        <TextField class="text-field" hint="description" autocorrect="false" autocapitalizationType="none"
                   returnKeyType="done"
                   row="1"
                   id="text-field-description"/>

        <Button text="Hash &amp; Save" tap="hashAndSave" row="2"/>
    </GridLayout>

</Page>
