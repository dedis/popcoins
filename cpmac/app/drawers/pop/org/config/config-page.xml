<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Configuration"/>
    </ActionBar>

    <GridLayout class="page-content" rows="auto,*,auto" columns="*">
        <Label class="label-title" text="Description" row="0"/>
        <TextView class="text-field" hint="description" autocorrect="false" autocapitalizationType="none"
                  returnKeyType="next"
                  row="1"
                  id="text-view-description"/>

        <Button text="Hash &amp; Save" tap="hashAndSave" row="2"/>
    </GridLayout>

</Page>
