<Page
        class="page">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Home"/>
    </ActionBar>

    <StackLayout class="page-content" orientation="vertical">
        <Label class="label-title" text="Latest blocks"/>

        <Label class="label-text" text="Rotation of the keys"/>
        <Button text="Vote for this update" tap="voteButtonTapped"/>

        <Label class="label-title" text="Propose operation" row="4" colSpan="3"/>

        <GridLayout class="page-content" rows="*" columns="*,*">
            <Button text="Propose rotation" tap="configButtonTapped" col="0"/>
            <Button text="Propose new key" tap="configButtonTapped" col="1"/>
        </GridLayout>
    </StackLayout>

</Page>
