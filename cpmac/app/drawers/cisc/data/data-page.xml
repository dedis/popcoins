<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Organizer"/>
    </ActionBar>

    <StackLayout class="page-content" orientation="vertical">

        <Label class="label-title" text="Check current device"/>
        <Button text="Check if the device is in the id" tap="checkForDeviceTaped"/>

        <Label class="label-title" text="Add device to the id"/>
        <Button text="Add to id" tap="addDeviceTaped"/>

        <Label class="label-title" text="Add a key value pair"/>
        <Button text="Add a Key Value pair" tap="addKeyValue"/>
    </StackLayout>

</Page>
