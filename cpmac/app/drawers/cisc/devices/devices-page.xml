<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Organizer"/>
    </ActionBar>

    <ListView items="{{ deviceList }}" orientation="vertical">
        <ListView.itemTemplate>
            <GridLayout rows="*" columns="*">
                <Label text="{{ device.id }}" textAlignment="center" textWrap="true"/>
            </GridLayout>
        </ListView.itemTemplate>
    </ListView>

</Page>
