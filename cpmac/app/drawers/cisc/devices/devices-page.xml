<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Organizer"/>
    </ActionBar>
    <GridLayout rows="*,auto" columns="*">
        <ListView items="{{ deviceList }}" orientation="vertical" row="0">
            <ListView.itemTemplate>
                <GridLayout rows="*" columns="*">
                    <Label text="{{ device.id }}" textAlignment="center" textWrap="true" tap="{{ device.showPub }}"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button text="Reload" tap="loadDeviceList" row="1"/>

    </GridLayout>


</Page>
