<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="PoP - Settings"/>
    </ActionBar>

    <GridLayout class="page-content" rows="auto,auto,auto,auto,*,auto" columns="*,auto,auto,*">
        <Label class="label-text" text="Description Hash" row="0" col="0"/>
        <Label class="label-space" text=" - " row="0" col="1" colSpan="2"/>
        <TextField class="text-field" hint="description hash" autocorrect="false" autocapitalizationType="none"
                   returnKeyType="done"
                   row="0"
                   col="3"
                   id="text-field-description"/>

        <Label class="label-text" text="Public Key" row="1" col="0"/>
        <Label class="label-space" text=" - " row="1" col="1" colSpan="2"/>
        <TextField class="text-field" hint="public key" autocorrect="false" autocapitalizationType="none"
                   returnKeyType="done"
                   row="1"
                   col="3"
                   id="text-field-public-key"/>

        <Label class="label-space" text="final.toml" row="2" colSpan="4"/>
        <Label class="label-space" text=" - " row="3" colSpan="4"/>
        <TextView class="text-field" hint="final.toml" autocorrect="false" autocapitalizationType="none"
                  returnKeyType="next"
                  row="4"
                  colSpan="4"
                  id="text-view-final-toml"/>

        <Button text="Save" tap="saveFields" row="5" col="0" colSpan="2"/>
        <Button text="Clear" tap="emptyFields" row="5" col="2" colSpan="2"/>
    </GridLayout>

</Page>
