<Page
        class="page"
        loaded="onLoaded">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Attendee"/>
    </ActionBar>
    <StackLayout class="page-content" orientation="vertical">

        <Label class="label-title" text="Key Pair"/>

        <Button text="Generate" tap="generateKeyPair"/>
        <Button text="Display" tap="displayQrOfPublicKey"/>

        <Label class="label-title" text="Device Name" />
        <TextField text="{{ name }}"/>
        <Button text="Change Name" tap="chooseName"/>

    </StackLayout>

</Page>
