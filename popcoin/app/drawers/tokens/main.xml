<Page
        class="page"
        loaded="onLoaded"
        unloaded="onUnloaded"
        navigatingTo="onNavigatingTo"
        xmlns:nsDrawer="nativescript-ui-sidedrawer"
        xmlns:myDrawer="shared/my-drawer"
        xmlns:nsListView="nativescript-ui-listview"
        xmlns:nsFloatingButton="nativescript-floatingactionbutton"
        xmlns="http://www.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <!--
        Use the NavigationButton as a side-drawer button in Android because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"/>
        <!--
        Use the ActionItem for IOS with position set to left. Using the NavigationButton as a side-drawer button in iOS is not possible, because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"

                    tap="onDrawerButtonTap"
                    ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Tokens"/>

    </ActionBar>

    <!--
    RadSideDrawer is a UI component part of the Progress NativeScript UI set of components.
    Learn more about the RadSideDrawer UI component and how it can be customized in this documentation article:
    http://docs.telerik.com/devtools/nativescript-ui/Controls/NativeScript/SideDrawer/getting-started
    The RadSideDrawer component is designed to be used as a root element to the <Page> and
    it shouldn't have any other siblings other than the <ActionBar> component.
    -->
    <nsDrawer:RadSideDrawer id="sideDrawer" showOverNavigation="true">
        <!--
        Use the RadSideDrawer.drawerTransition component to change the open/close animation of the drawer.
        -->
        <nsDrawer:RadSideDrawer.drawerTransition>
            <nsDrawer:SlideInOnTopTransition/>
        </nsDrawer:RadSideDrawer.drawerTransition>

        <!--
        Use the RadSideDrawer.drawerContent component to display the content of the app drawer on this page.
        Always wrap content in a layout component.
        -->
        <nsDrawer:RadSideDrawer.drawerContent>
            <StackLayout>
                <!--
                Use {N} custom components to reuse UI across your mobile app.
                The MyDrawer custom component defined in "/shared/my-drawer" holds the contents of the app drawer.
                Learn more about custom components and how they can be used in this documentation article:
                http://docs.nativescript.org/ui/basics#custom-components
                -->
                <myDrawer:MyDrawer selectedPage="Tokens"/>
            </StackLayout>
        </nsDrawer:RadSideDrawer.drawerContent>

        <!--
        Use the RadSideDrawer.mainContent component to display the content of the page when you have an app drawer.
        Always wrap content in a layout component.
        -->
        <nsDrawer:RadSideDrawer.mainContent>

            <GridLayout class="page-content" rows="*" columns="*,*,auto">
                <Label text="You don't have any party. Find an organizer to join parties !"
                       textWrap="true"
                       class="empty-list-label"
                       colSpan="3"
                       visibility="{{ isEmpty ? 'visible' : 'collapse' }}"
                />

                <nsListView:RadListView items="{{ partyListDescriptions }}" itemTap="partyTapped" row="0" colSpan="3"
                                        id="listView">
                    <nsListView:RadListView.itemTemplate>
                        <GridLayout id="grid-layout" rows="*,*,*,*,auto" columns="*, auto" backgroundColor="white"
                                    class="basic-list-decorated">
                            <StackLayout>
                                <Label text="{{ desc.name }}" class="list-title" row="0" col="0" textWrap="true"
                                       textTransform="capitalize"/>
                                <Label text="{{ desc.dateTime }}" row="1" rowSpan="2" col="0" textWrap="true"
                                       fontSize="15%"/>
                                <Label text="{{ desc.location }}" row="2" col="0" textWrap="true" fontSize="15%"
                                       textTransform="capitalize"/>
                                <Label text="{{ 'Balance: ' + status.balance }}" row="3" col="0"
                                       visibility="{{ status.status !=='poptoken' ? 'visible' : 'collapse'}}"
                                       textWrap="true"
                                       fontSize="15%" textTransform="capitalize"/>
                                <Label text="Organizers :" row="4" col="0" textWrap="true" fontSize="15%"
                                       visibility="{{ status.status !=='poptoken' ? 'visible' : 'collapse'}}"/>
                                <GridLayout visibility="{{ status.status !=='poptoken' ? 'visible' : 'collapse'}}">
                                    <Repeater items="{{ desc.roster.list }}" id="repeater">
                                        <Repeater.itemsLayout>
                                            <StackLayout orientation="vertical"/>
                                        </Repeater.itemsLayout>
                                        <Repeater.itemTemplate>
                                            <Label text="{{ description }}" margin="10" visibility="visible"/>
                                        </Repeater.itemTemplate>
                                    </Repeater>
                                </GridLayout>
                            </StackLayout>
                            <StackLayout class="status-text" paddingTop="100%" paddingRight="20%">
                                <Image src="{{ (status.qrcode === undefined)? status.qrcode : status.qrcode }} "
                                       visibility="visible" width="40%" height="40%" stretch="aspectFill"/>
                                <Label text="{{ status.status }}"
                                       visibility="{{ status.status !=='poptoken' ? 'visible' : 'collapse'}}" row="4"
                                       col="0"
                                       textWrap="true" paddingLeft="30%" paddingRight="40%" stretch="aspectFill"
                                       textTransform="uppercase"/>
                                <Label text="{{ status.status }}"
                                       visibility="{{ status.status =='poptoken' ? 'visible' : 'collapse'}}" row="4"
                                       col="0"
                                       textWrap="true" paddingTop="10%" stretch="aspectFill" textTransform="uppercase"/>
                            </StackLayout>
                        </GridLayout>
                    </nsListView:RadListView.itemTemplate>
                </nsListView:RadListView>
                <nsFloatingButton:fab tap="addParty"
                                      row="1" col="3"
                                      icon="res://ic_add_white_48dp"
                                      rippleColor="#f1f1f1"
                                      class="fab-button"/>
                <ActivityIndicator busy="{{ isLoading }}" rowSpan="1" colSpan="2"/>
            </GridLayout>

        </nsDrawer:RadSideDrawer.mainContent>
    </nsDrawer:RadSideDrawer>

</Page>
