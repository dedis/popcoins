<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<TabView androidTabsPosition="bottom">
    <TabViewItem title="Parties" ios:iconSource="res://tabIcons/home" android:iconSource="res://home">
        <Frame defaultPage="pages/parties/parties-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Badges" ios:iconSource="res://tabIcons/browse" android:iconSource="res://browse">
        <Frame defaultPage="pages/badges/badges-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Applications" ios:iconSource="res://tabIcons/search" android:iconSource="res://search">
        <Frame defaultPage="pages/apps/apps-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Admin" ios:iconSource="res://tabIcons/search" android:iconSource="res://search">
        <Frame defaultPage="pages/admin/admin-page"></Frame>
    </TabViewItem>
</TabView>
