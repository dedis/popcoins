<!--
This is the page that is presented in the 'Home' tab.
Feel free to customize layouts and components to change how the tab view looks.
-->
<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Parties"></Label>
    </ActionBar>

    <ListView items="{{ items }}" itemTap="onItemTap" class="list-group">
        <ListView.itemTemplate>
            <GridLayout id="grid-layout" rows="auto,auto" columns="*, *" backgroundColor="white"
                        class="basic-list-decorated">
                <StackLayout row="0" col="0" padding="10%">
                    <Label text="{{ name }}" class="h3" textWrap="true"
                           textTransform="uppercase"/>
                    <Label text="{{ datetime }}" textWrap="true"  fontSize="15%"/>
                    <Label text="{{ location }}" textWrap="true" fontSize="15%"
                           textTransform="capitalize"/>
                </StackLayout>
                <StackLayout row="1" col="0">
                    <Label text="{{ status }}" style="text-align:center;" class="h4"
                           textWrap="true" paddingTop="10%" stretch="aspectFill" textTransform="uppercase"/>
                </StackLayout>
                <StackLayout class="status-text" rowSpan="2" col="1">
                    <Image src="{{ qrcode }}"
                           visibility="visible" stretch="aspectFill"/>
                           <!--visibility="visible" width="60%" height="60%" stretch="aspectFill"/>-->
                </StackLayout>
            </GridLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>