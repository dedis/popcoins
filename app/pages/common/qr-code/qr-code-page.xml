<Page
        class="page"
        loaded="onLoaded"
        shownModally="onShownModally">


    <GridLayout class="page-content" rows="auto, *" columns="*">
        <Label height="5%" row="0"/>
        <GridLayout class="page-content" rows="auto, *" columns="*" row="1">
            <Label id="page-name" text="{{ title }}"/>
            <Label vertical-align="center" tap="onDone" class="nav-buttons" text="&#xff060;" color="white" row="0"
                   column="0" topMargin="5%"/>
            <Image id="image" stretch="aspectFit" tap="copyToClipboard" row="1" column="0"/>
            <Label id="scan-me" text="SCAN ME" row="1" column="0"/>
        </GridLayout>
    </GridLayout>

</Page>
