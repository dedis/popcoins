<Page class="page"
      loaded="onLoaded">

    <ActionBar class="action-bar">
        <NavigationButton text="Go Back" android:icon="res://ic_arrow_back" tap="goBack"/>
        <Label class="action-bar-title" text="ByzCoin Configuration"/>
        <ActionItem tap="addBCConfig"
                    android:icon="res://ic_add_white"
                    ios.systemIcon="4" ios.position="right"
                    text="Add" android.position="actionBar"
                    visibility="{{ isBCConfigDefined ? 'collapsed' : 'visible' }}"/>
        <ActionItem tap="deleteConfig"
                    android:icon="res://ic_delete_white"
                    ios.systemIcon="16" ios.position="right"
                    text="Delete" android.position="actionBar"
                    visibility="{{ isBCConfigDefined ? 'visible' : 'collapsed' }}"/>
        <ActionItem tap="displayQrOfBC"
                    android:icon="res://ic_share_white"
                    ios.systemIcon="9" ios.position="right"
                    text="QR" android.position="actionBar"
                    visibility="{{ isBCConfigDefined ? 'visible' : 'collapsed' }}"/>
    </ActionBar>

    <GridLayout rows="*,auto" columns="*">

        <ListView items="{{ statsList, statsList }}" row="0">
            <ListView.itemTemplate>
                <GridLayout class="basic-list" rows="auto,auto" columns="*">
                    <Label class="list-title" text="{{ info.title }}" textAlignment="left" textWrap="true" row="0"/>
                    <Label text="{{ info.info }}" textAlignment="left" textWrap="true" row="1"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>

        <Label text="Your BC Config is not set yet. Please add one to start administrating your DARCs"
               textWrap="true"
               class="empty-list-label"
               row="1"
               width="80%"
               height="30%"
               margin="30%"
               visibility="{{ isBCConfigDefined ? 'collapsed' : 'visible' }}"
        />

    </GridLayout>
</Page>
