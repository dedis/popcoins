<Page class="page"
      loaded="onLoaded">

    <ActionBar class="action-bar">
        <NavigationButton text="Go Back" android:icon="res://ic_arrow_back" tap="goBack"/>
        <Label class="action-bar-title" text="Pending Signature Request"/>
        <ActionItem tap="accept"
                    android:icon="res://ic_done"
                    ios.systemIcon="7" ios.position="right"
                    text="Accept" android.position="actionBar"/>
        <ActionItem tap="refuse"
                    android:icon="res://ic_delete_white"
                    ios.systemIcon="14" ios.position="right"
                    text="refuse" android.position="actionBar"/>
    </ActionBar>

    <GridLayout rows="*,auto" columns="*">

        <ListView items="{{ statsList, statsList }}" row="0">
            <ListView.itemTemplate>
                <GridLayout class="basic-list" rows="auto,auto" columns="*">
                    <Label class="list-title" text="{{ info.title }}" textAlignment="left" textWrap="true" row="0"/>
                    <Label text="{{ info.info }}" textAlignment="left" textWrap="true" row="1"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>

    </GridLayout>
</Page>
